<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="wrap_content">





        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:textSize="@dimen/simple_text_size"
            android:gravity="left"
            android:layout_marginTop="@dimen/simple_text_in_margin_top"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:background="#eef1f6"
            android:elevation="0.5dp"
            android:layout_toRightOf="@+id/imageView"
            android:paddingBottom="@dimen/simple_text_in_padding_bottom"
            android:layout_marginRight="@dimen/simple_text_in_margin_right"
            android:paddingRight="@dimen/simple_text_in_padding_right"
            android:paddingLeft="@dimen/simple_text_in_padding_left"
            android:layout_height="wrap_content" />

    <TextView
        android:textSize="8sp"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:text="12:04 am" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/placeholder"
        android:layout_height="30dp"
         />

</RelativeLayout>