<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    android:elevation="1dp"
    app:cardElevation="1dp"
    android:orientation="vertical"
    app:cardCornerRadius="2dp">


    <FrameLayout
        android:background="@color/blue_light"
        android:layout_width="match_parent"

        android:padding="10dp"

        android:layout_height="45dp">

        <View
            android:layout_width="20dp"
            android:background="@color/white"
            android:layout_gravity="center|left"
            android:alpha="0.4"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Meeting" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="45dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"

            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Meeting with johnathan Lee" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dotted" />

        <TextView
            android:id="@+id/textView5"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:textSize="10sp"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"
            android:text="MEETING AT 12:56 PM" />


        <TextView
            android:id="@+id/textView7"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barclays misled shareholders and the public about one of the biggest investments in the bank's history, a BBC Panorama investigation has found.
The bank announced in 2008 th" />

    </LinearLayout>



</android.support.v7.widget.CardView>