<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/contentPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/simple_text_in_margin_right"
        android:layout_marginTop="@dimen/simple_text_in_margin_top"
        android:layout_toRightOf="@+id/imageView"
        android:background="#eef1f6"
        android:elevation="0.5dp"
        android:gravity="left"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/simple_text_in_padding_left"
        android:paddingRight="@dimen/simple_text_in_padding_right"
        android:paddingTop="10dp"
        android:textSize="@dimen/simple_text_size">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Cool, have set ad reminder"
            android:textSize="@dimen/simple_text_size" />
    </RelativeLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/contentPanel"
        android:layout_below="@+id/contentPanel"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="12:04 am"
        android:textColor="@color/gray"
        android:textSize="8sp" />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/thumnail"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/contentPanel"
        android:layout_below="@+id/textView3"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/demo_thum"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10dp" />







    <View
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/contentPanel"
        android:layout_below="@+id/textView3"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner"
        android:scaleType="centerCrop" />


    <ImageView
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/contentPanel"
        android:layout_below="@+id/textView3"
        android:layout_marginBottom="5dp"
        android:padding="60dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/play_button"
        android:scaleType="centerCrop"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/placeholder" />


</RelativeLayout>